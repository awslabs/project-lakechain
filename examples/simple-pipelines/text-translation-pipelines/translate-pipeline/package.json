{
  "name": "text-translation-pipeline",
  "description": "An example showcasing how to translate documents using Amazon Translate.",
  "version": "0.7.0",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "build-pkg": "npx lerna run build --scope=text-translation-pipeline --include-dependencies",
    "clean": "npx rimraf dist/ cdk.out/ node_modules/",
    "audit": "npm audit && npm run synth --silent | cfn_nag",
    "lint": "npx eslint .",
    "synth": "npx --yes cdk synth",
    "deploy": "npx --yes cdk deploy",
    "hotswap": "npx --yes cdk deploy --hotswap",
    "destroy": "npx --yes cdk destroy --all"
  },
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/awslabs/project-lakechain"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^22.1.0",
    "esbuild": "0.21.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@project-lakechain/s3-event-trigger": "*",
    "@project-lakechain/s3-storage-connector": "*",
    "@project-lakechain/translate-text-processor": "*"
  },
  "peerDependencies": {
    "aws-cdk-lib": "2.151.0",
    "constructs": "^10.3.0"
  }
}
