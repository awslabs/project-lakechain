{
  "name": "audio-recording-summarization-pipeline",
  "description": "Builds a pipeline for summarizing audio recordings using Amazon Transcribe and Amazon Bedrock.",
  "version": "0.10.0",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "build-pkg": "npx lerna run build --scope=audio-recording-summarization-pipeline --include-dependencies",
    "clean": "npx rimraf dist/ cdk.out/ node_modules/",
    "audit": "npm audit && npm run synth --silent | cfn_nag",
    "lint": "npx eslint .",
    "synth": "npx --yes cdk synth",
    "deploy": "npx --yes cdk deploy",
    "hotswap": "npx --yes cdk deploy --hotswap",
    "destroy": "npx --yes cdk destroy --all"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "esbuild": "0.27.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  },
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/awslabs/project-lakechain"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@project-lakechain/bedrock-text-processors": "*",
    "@project-lakechain/s3-event-trigger": "*",
    "@project-lakechain/s3-storage-connector": "*",
    "@project-lakechain/transcribe-audio-processor": "*"
  },
  "peerDependencies": {
    "aws-cdk-lib": "2.235.1",
    "constructs": "^10.3.0"
  }
}
